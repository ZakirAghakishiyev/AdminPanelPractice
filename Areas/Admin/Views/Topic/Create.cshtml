@using AdminPanelPractice.Areas.Admin.Models
@model TopicCreateViewModel

<div class="card-body">
    
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="basic-default-fullname">Title</label>
            <input asp-for="Title" class="form-control" id="basic-default-fullname" placeholder="Sport..." />
        </div>
        <div class="form-group">
            <label>Images</label>
            <div class="input-group col-xs-12">
                <input asp-for="CoverImageFile" class="form-control file-upload-info" placeholder="Upload Image">
            </div>
            <span asp-validation-for="CoverImageFile" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>